    .main__content__image
      -# .main__content__image__store
      - @lunches.each do |lunch|
        - image = lunch.images.first
        = link_to lunch_path(lunch.id), class: 'btn100' do
          .main__content__image__store__pick
            -# - if lunch.holiday?
            .holiday
              = image_submit_tag image.src, class: "image10" , height: "150px" , width: "220px"
            .main-menu
              看板メニュー
            .main__content__image__store__pick__name
              = lunch.name
              .main__content__image__store__pick__name__genre
                平均予算
                #{lunch.budget}円　★#{lunch.favorites_count}
